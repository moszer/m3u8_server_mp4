{
    "version": 2,
    "builds": [
      {
        "src": "./index.js",
        "use": "@vercel/node",     
        "config": {
          "maxDuration": 60,
          "memory": 1024
        }
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",          
        "dest": "/backend/server.js"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",           
        "dest": "/index.html"    
      }
    ]
  }